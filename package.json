{
  "name": "schema-filter",
  "version": "0.0.1",
  "description": "given schema, this package extracts all available queries, mutations, subscriptions and then make list of those to determine whether to use each graphql operation, by using that check-list, reduced-schema is generated",
  "repository": {
    "type": "git",
    "url": "https://github.com/vetching-corporation/schema-filter.git"
  },
  "bugs": {
    "email": "dev.kyungho@gmail.com",
    "url": "https://github.com/vetching-corporation/schema-filter/issues"
  },
  "homepage": "https://www.npmjs.com/package/schema-filter",
  "author": "KyungHo Park <crorowslowpp@gmail.com>",
  "license": "MIT",
  "private": false,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "keywords": [
    "graphql",
    "schema",
    "filter"
  ],
  "bin": "build/index.js",
  "main": "build/index.js",
  "schema-filter": {
    "schema-original": "example/schema.graphql"
  },
  "scripts": {
    "clean": "rimraf node_mobules build",
    "translate": "npx tsc",
    "build": "yarn translate",
    "test-using-example:init": "yarn translate && node build/index.js init",
    "test-using-example:include": "yarn translate && node build/index.js include",
    "test-using-example:exclude": "yarn translate && node build/index.js exclude",
    "test-using-example:filter": "yarn translate && node build/index.js filter",
    "update": "yarn run introspect && yarn run filter && yarn run generate",
    "initialize-check-list": "npx ts-node gql/utilities/look-up.ts",
    "on": "npx ts-node gql/editor.ts on && yarn filter",
    "off": "npx ts-node gql/editor.ts off && yarn filter",
    "filter": "npx ts-node gql/index.ts && wc -l gql/schema-original.graphql && wc -l gql/schema-operation-filtered.graphql && wc -l gql/schema-filtered.graphql"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.197",
    "@types/node": "^18.0.0",
    "prettier": "2.3.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^11.0.0",
    "conf": "^11.0.2",
    "find-package-json": "^1.2.0",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "path": "^0.12.7"
  }
}
